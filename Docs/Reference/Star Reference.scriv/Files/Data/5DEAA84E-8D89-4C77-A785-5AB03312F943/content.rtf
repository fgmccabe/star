\
[[TypeAnnotation]]TypeAnnotation ::= <<Identifier>> `:` <<Type>>\
\
[[KindAnnotation]]KindAnnotation ::= <<Identifier>> `::` <<Kind>>\
   | <<Identifier>> `::` <<TypeConstraint>> `|:` <<Kind>>\
\

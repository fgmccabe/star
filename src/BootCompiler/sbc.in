#!/bin/sh
CWD=`pwd`
REPO=`pwd`
PKG=''

while [ "$1" != "" ]; do
    case $1 in
        -w | --source-dir )     shift
                                CWD=`realpath $1`
                                ;;
	-r | --repo-dir )       shift
                                REPO=`realpath $1`
                                ;;
	* )                     PKG=$1
				;;
    esac
    shift
done

cd @BOOT_COMPILER_DIRECTORY@
swipl sbc.pl -r $REPO/ -w $CWD/ $PKG
